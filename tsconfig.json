{
  "compilerOptions": {
    "outDir": "deploy/dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2015",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules/**/*"
  ],
  "types": [
    "chrome"
  ],
  "typeRoots": [
    "./src/types/store-lib"
  ],
  "declaration": true,
  "declarationDir": "./src/types/store-lib",
}
